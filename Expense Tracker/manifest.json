{
    "manifest_version": 3,
    "name": "Expense Splitter Extension JS",
    "version": "1.0",
    "description": "Simple Expense splitter extension built in pure HTML CSS JS...",
    "author" : "sambitmondal2005@gmail.com",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "optional_permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}