{
    "manifest_version": 3,
    "name": "Pictionary Game Extension",
    "version": "1.0",
    "description": "Here's Pictionary! A fun and entertaining multi-player game to enjoy :))",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "storage"
    ],
    "optional-permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}