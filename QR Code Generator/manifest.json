{
    "manifest_version": 3,
    "name": "QR Code Generator Extension JS",
    "version": "1.0",
    "description": "Simple QR code generator extension built in pure HTML CSS JS...",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}